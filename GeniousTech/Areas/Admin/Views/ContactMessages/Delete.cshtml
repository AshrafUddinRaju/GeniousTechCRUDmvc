@model GeniousTech.Models.ContactMessage
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Message";
}

<h2>Delete Message</h2>

<h4>Are you sure you want to delete this message?</h4>

<div class="mb-2"><strong>Name:</strong> @Model.Name</div>
<div class="mb-2"><strong>Email:</strong> @Model.Email</div>
<div class="mb-2"><strong>Subject:</strong> @Model.Subject</div>
<div class="mb-2"><strong>Message:</strong> @Model.Message</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
